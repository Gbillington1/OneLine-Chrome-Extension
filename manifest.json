{
    "name": "OneLine Reading Aid",
    "version": "1.0",
    "description": "Line-by-line reading assist for Google Chrome",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts":[{
        "css": ["style.css"],
        "js": ["jquery-3.4.1.min.js", "splitting.min.js", "textReader.js"],
        "matches": ["http://*/*", "https://*/*"],
        "exclude_globs": ["*://www.google.com/search?*"]
    }],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "One-Line Reading Aid"
    },
    "manifest_version": 2
}
