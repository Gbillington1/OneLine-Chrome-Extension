{
    "name": "OneLine Reading Aid",
    "version": "1.0",
    "description": "Line-by-line reading assist for Google Chrome",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts":[{
        "matches": ["<all_urls>"],
        "js": ["textReader.js"]
    }],
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
