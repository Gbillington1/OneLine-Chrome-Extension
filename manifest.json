{
    "name": "OneLine",
    "version": "1.5",
    "description": "OneLine highlights a single line to focus your reading.",
    "permissions": ["http://*/*", "https://*/*", "activeTab", "storage"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "content_scripts":[{
        "css": ["css/style.css"],
        "js": ["js/jquery-3.4.1.min.js", "js/splitting.min.js", "js/textReader.js"],
        "matches": ["http://*/*", "https://*/*"],
        "exclude_globs": ["*://www.google.com/search?*"]
    }],
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
    "browser_action": {
        "default_popup": "defaultPopup.html",
        "default_title": "OneLine"
    },
    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png"
    },
    "manifest_version": 2
}
