{
    "name": "OneLine",
    "version": "1.0",
    "description": "OneLine provides a simple way to help all users read while they browse the web.",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts":[{
        "css": ["style.css"],
        "js": ["jquery-3.4.1.min.js", "splitting.min.js", "textReader.js"],
        "matches": ["http://*/*", "https://*/*"],
        "exclude_globs": ["*://www.google.com/search?*"]
    }],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "OneLine"
    },
    "icons": {
        "128": "icon128.png" 
    },
    "manifest_version": 2
}
