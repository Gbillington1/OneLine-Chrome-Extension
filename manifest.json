{
    "manifest_version": 3,
    "name": "OneLine",
    "version": "2.0",

    "description": "OneLine highlights a single line to focus your reading.",
    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "permissions": [
        "activeTab", 
        "storge",  
        "identity", 
        "identity.email"
    ],
    "host_permissions": [
        "*://*/*"
    ],

    "content_scripts":[{
        "css": ["css/style.css"],
        "js": [
            "js/jquery-3.4.1.min.js", 
            "js/splitting.min.js", 
            "js/textReader.js"
        ],
        "matches": [
            "http://*/*", 
            "https://*/*"
        ],
        "exclude_globs": ["*://www.google.com/search?*"]
    }],
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
    "browser_action": {
        "default_popup": "html/defaultPopup.html",
        "default_title": "OneLine"
    },
    "oauth2": {
        "client_id": "1013313058566-1oqhh4vu4hs84fsej1jakv3qk362bur8.apps.googleusercontent.com",
        "scopes":["https://www.googleapis.com/auth/userinfo.email"]
    },
    "key": ""
   
}
