{
    "manifest_version": 3,
    "name": "OneLine",
    "version": "2.0",
    "description": "Strengthen your reading OneLine at a time.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts":[{
    "js": [
        "js/OneLine-Main.js",
        "js/modules/OneLineModule.js",
        "js/modules/ParagraphControllerModule.js",
        "js/modules/ParagraphModule.js",
        "js/modules/LineModule.js",
        "js/libraries/Readability.js",
        "js/libraries/splitting.min.js", 
        "js/libraries/jquery-3.4.1.min.js"
    ],
    "css": [
        "css/style.css"
    ],
    "matches": [
        "http://*/*", 
        "https://*/*"
    ],
    "exclude_globs": ["*://www.google.com/search?*"]
    }]

}